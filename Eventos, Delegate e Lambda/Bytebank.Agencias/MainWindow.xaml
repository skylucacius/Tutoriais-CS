<Window x:Class="Bytebank.Agencias.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bytebank.Agencias"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <ListBox Width="290" Height="270" Canvas.Top="15" Canvas.Left="15"></ListBox>
        <StackPanel Canvas.Top="15" Canvas.Left="305" Grid.ColumnSpan="2">
            <TextBlock FontWeight="Bold" Text="Número" TextWrapping="Wrap"/>
            <TextBlock Name="txtNumero" TextWrapping="Wrap"/>
            <TextBlock FontWeight="Bold" Text="Nome" TextWrapping="Wrap"/>
            <TextBlock Name="txtNome" TextWrapping="Wrap"/>
            <TextBlock FontWeight="Bold" Text="Telefone" TextWrapping="Wrap"/>
            <TextBlock Name="txtTelefone" TextWrapping="Wrap"/>
            <TextBlock FontWeight="Bold" Text="Descrição" TextWrapping="Wrap"/>
            <TextBlock Name="txtDescricao" TextWrapping="Wrap"/>
            <TextBlock FontWeight="Bold" Text="Endereço" TextWrapping="Wrap"/>
            <TextBlock Name="txtEndereco" TextWrapping="Wrap"/>
        </StackPanel>

    </Canvas>
</Window>
